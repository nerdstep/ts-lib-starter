{
  "name": "ts-lib-starter",
  "version": "0.1.0",
  "description": "",
  "license": "MIT",
  "repository": "nerdstep/ts-lib-starter",
  "main": "dist/index.js",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "esmodule": "dist/index.modern.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "author": {
    "name": "Justin Williams",
    "email": "justinwilliams42@gmail.com"
  },
  "engines": {
    "node": ">=12"
  },
  "keywords": [
    "typescript",
    "library",
    "starter",
    "boilerplate"
  ],
  "scripts": {
    "start": "yarn test",
    "prebuild": "rimraf dist",
    "build": "microbundle",
    "build:dev": "yarn build -f es --no-compress",
    "lint": "xo src",
    "lint:fix": "xo src --fix",
    "test": "jest --watch",
    "test:coverage": "jest --no-cache --coverage",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@types/jest": "^26.0.15",
    "babel-jest": "^26.6.3",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.3",
    "microbundle": "^0.12.4",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.3",
    "typescript": "^4.1.3",
    "xo": "^0.36.1"
  },
  "xo": {
    "prettier": true,
    "globals": [
      "describe",
      "expect",
      "it"
    ],
    "rules": {}
  },
  "jest": {
    "bail": true,
    "verbose": false,
    "globals": {
      "ts-jest": {
        "babelConfig": true
      }
    },
    "roots": [
      "<rootDir>/src/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}
