{
  "name": "ts-lib-starter",
  "version": "0.1.0",
  "description": "",
  "license": "MIT",
  "repository": "nerdstep/ts-lib-starter",
  "main": "dist/index.js",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.esm.js",
  "esmodule": "dist/index.modern.js",
  "source": "src/index.ts",
  "types": "dist/types/index.d.ts",
  "browserslist": "> 0.25%, not dead",
  "author": {
    "name": "Justin Williams",
    "email": "justinwilliams42@gmail.com"
  },
  "engines": {
    "node": ">=12"
  },
  "keywords": [
    "typescript",
    "library",
    "starter",
    "boilerplate"
  ],
  "scripts": {
    "start": "yarn test",
    "prebuild": "rimraf dist",
    "build": "microbundle --jsx React.createElement",
    "build:dev": "yarn build -f es --no-compress --no-sourcemap",
    "lint": "xo src",
    "lint:fix": "xo src --fix",
    "test": "jest --watch",
    "test:coverage": "jest --no-cache --coverage",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.12.1",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/react-hooks": "^3.7.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.14",
    "@types/react": "^17.0.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.16.0",
    "eslint-config-xo-react": "^0.23.0",
    "eslint-plugin-jest-dom": "^3.6.4",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "microbundle": "^0.12.4",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.3",
    "typescript": "^4.1.3",
    "xo": "^0.36.1"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "npm run lint:fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "xo": {
    "prettier": true,
    "extends": "xo-react",
    "globals": [
      "describe",
      "expect",
      "it",
      "test"
    ],
    "rules": {
      "capitalized-comments": 0,
      "import/no-unassigned-import": 0,
      "unicorn/filename-case": 0
    }
  },
  "jest": {
    "bail": true,
    "verbose": false,
    "globals": {
      "ts-jest": {
        "babelConfig": true
      }
    },
    "roots": [
      "<rootDir>/src/"
    ],
    "setupFilesAfterEnv": [
      "./src/__setup__/setupTests.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
